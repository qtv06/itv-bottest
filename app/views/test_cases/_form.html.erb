<%= form_for [@test_suit, @test_case] do |f| %>
  <div class="btn-action">
    <%= link_to "", url_for(:back), class: "btn-back btn-icon", "data-toggle" => "tooltip", title: "Back" %>
    <%= f.submit "", class: "btn-save btn-icon", "data-toggle" => "tooltip", title: "Save Test Case" %>
    <%= link_to "", new_test_suit_test_case_path(@test_suit), class: "btn-add btn-icon", "data-toggle" => "tooltip", title: "Add Step" %>
  </div>
  <div class="row">
    <div class="col-md-2 col-sm-4 label-test-suit">
      <%= f.label "Test Case Name" %>
    </div>
    <div class="col-md-4 col-sm-6 input-test-suite">
      <%= f.text_field :name, class: "form-control"%>
    </div>
  </div>
<% end %>
