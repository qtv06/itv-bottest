<%= form_for :session, url: login_path, id: "signUpForm" do |f| %>
  <div id="signUpTitleContainer">Log In</div>
  <div id="rainbowForSignup"></div>
  <div id="containerForUserEmailInput">
    <%= f.email_field :email, id:"userEmailInput", class:"doRemoveFront registerInput", title:"User Email", placeholder:"Email" %>
  </div>
  <div id="containerForUserPasswordInput">
    <%= f.password_field :password, id:"userPasswordInput", class:"doRemoveFront registerInput", title:"User Password", placeholder:"Password" %>
  </div>
  <%= f.label :remember_me, class: "checkbox inline" do %>
  <%= f.check_box :remember_me %>
  <span>Remember me on this computer</span>
  <% end %>
  <div id="signUpButton">
   <%= f.submit "Log In", class:'btn btn-success' %>
  </div>
  <div id="forgotPass">
  <%= link_to "I forgot my password", new_password_reset_path %>
  </div>
  <div id="rainbowForSignup"></div>
<% end %>

